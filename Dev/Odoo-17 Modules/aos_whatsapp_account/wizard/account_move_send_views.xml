<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="account_move_send_whatsapp_form" model="ir.ui.view">
        <field name="name">account.move.send.form</field>
        <field name="model">account.move.send</field>
        <field name="inherit_id" ref="account.account_move_send_form"/>
        <field name="arch" type="xml">
            <field name="enable_send_mail" position="after">
                <field name="enable_send_whatsapp" invisible="1"/>
            </field>
            <xpath expr="//div[3]" position="attributes">
                <attribute name="invisible"></attribute>
            </xpath>
            <div name="option_send_mail" position="after">
                <div name="option_send_whatsapp"
                    invisible="not enable_send_whatsapp">
                    <field name="checkbox_send_whatsapp"
                        readonly="send_mail_readonly"/>
                    <b><label for="checkbox_send_whatsapp"/></b>
                    <!-- <i class="fa fa-question-circle ml4"
                        role="img"
                        aria-label="Warning"
                        title="The email address is unknown on the partner"
                        invisible="not send_mail_readonly"/> -->
                </div>
            </div>
        </field>
    </record>

